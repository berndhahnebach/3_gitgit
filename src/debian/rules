#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=4

# CFLAGS = -Wall -g
DEBIAN = $(shell pwd)/debian
FREECADDIR = $(DEBIAN)/freecad

freecad-stamp:
	dh_testdir
	sh cvsbuild.sh
	./configure --prefix=/opt/freecad --with-wildmagic-includes=/home/werner/Projekte/GeometricTools/WildMagic3/Include --with-wildmagic-libs=/home/werner/Projekte/GeometricTools/WildMagic3/Library --with-Qt-lib=qt-mt32
	$(MAKE) clean
	$(MAKE)
	$(MAKE) DESTDIR=$(FREECADDIR) install
	touch freecad-stamp

build: freecad-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f freecad-stamp
	# Add here commands to clean up after the build process.
	rm -rf $(FREECADDIR)

	-$(MAKE) clean
	dh_clean

install: build
	dh_testdir
	dh_testroot
	# should we remove the following line?
	#dh_clean -k
	#dh_installdirs
	# we should already be installed by now.

	# Add here commands to install the package into debian/freecad.
	#dh_install --sourcedir=$(FREECADDIR)


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdirs -a
	dh_installchangelogs ChangeLog.txt
	dh_installdocs
	dh_installexamples
#	dh_install --sourcedir=$(FREECADDIR)
	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
